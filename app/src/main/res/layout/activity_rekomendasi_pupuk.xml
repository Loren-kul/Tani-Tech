<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:padding="24dp">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Panduan Bertani"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#2E5D3E"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Langkah-langkah untuk\nmemulai aktivitas pertanian"
            android:textSize="16sp"
            android:textColor="#666666"
            android:lineSpacingExtra="4dp" />

    </LinearLayout>

    <!-- Menu Items Container -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        android:layout_marginBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="8dp">

            <!-- Persiapan Lahan -->
            <LinearLayout
                android:id="@+id/layoutPersiapanLahan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_pin"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="center_vertical"
                    app:tint="#E57373" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Persiapan Lahan"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:fontFamily="sans-serif-medium"
                    android:layout_gravity="center_vertical" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_right"
                    android:layout_gravity="center_vertical"
                    app:tint="#CCCCCC" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0F0F0"
                android:layout_marginStart="56dp" />

            <!-- Pemilihan Tanaman -->
            <LinearLayout
                android:id="@+id/layoutPemilihanTanaman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_wheat"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="center_vertical"
                    app:tint="#D4A574" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pemilihan Tanaman"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:fontFamily="sans-serif-medium"
                    android:layout_gravity="center_vertical" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_right"
                    android:layout_gravity="center_vertical"
                    app:tint="#CCCCCC" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0F0F0"
                android:layout_marginStart="56dp" />

            <!-- Penanaman -->
            <LinearLayout
                android:id="@+id/layoutPenanaman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_sprout"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="center_vertical"
                    app:tint="#81C784" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Penanaman"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:fontFamily="sans-serif-medium"
                    android:layout_gravity="center_vertical" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_right"
                    android:layout_gravity="center_vertical"
                    app:tint="#CCCCCC" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0F0F0"
                android:layout_marginStart="56dp" />

            <!-- Panen & Pascapanen -->
            <LinearLayout
                android:id="@+id/layoutPanenPascapanen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_shovel"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="center_vertical"
                    app:tint="#8D6E63" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Panen &amp; Pascapanen"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:fontFamily="sans-serif-medium"
                    android:layout_gravity="center_vertical" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_right"
                    android:layout_gravity="center_vertical"
                    app:tint="#CCCCCC" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Bottom Navigation Indicator -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="auto">

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/indicator_active"
            android:layout_marginEnd="8dp" />

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/indicator_inactive"
            android:layout_marginEnd="8dp" />

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/indicator_inactive" />

    </LinearLayout>

</LinearLayout>